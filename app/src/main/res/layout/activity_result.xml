<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="sec.masterperiodictable.ResultActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/resultListView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#fbf244"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#87CE00"
            android:orientation="vertical">

            <TextView
                android:id="@+id/resultSymbolView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:text="H"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/resultFormulaView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:paddingLeft="16dp"
                android:paddingRight="10dp"
                android:textColor="#FFFFFF"
                android:text="수소"
                android:textSize="20dp"
                android:gravity="top|center"
                android:scrollbars="horizontal"/>

            <TextView
                android:id="@+id/resultDesView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="4"
                android:gravity="top|left"
                android:textColor="#FFFFFF"
                android:text="수소"
                android:textSize="20dp"
                android:paddingLeft="16dp"
                android:paddingRight="10dp"
                android:scrollbars="vertical"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/modelButton"
                android:layout_weight="0.10"
                android:textColor="#FFFFFF"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/model_btn"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"/>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/linearLayout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/linearLayout"
        android:gravity="center"
        android:text="결과를 찾을 수 없습니다." />
</RelativeLayout>
